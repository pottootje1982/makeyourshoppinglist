<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<!-- Servlets -->
	<servlet>
		<servlet-name>shoppingListService</servlet-name>
		<servlet-class>com.wouterpot.makeyourshoppinglist.server.ShoppingListService</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>shoppingListService</servlet-name>
		<url-pattern>/com_wouterpot_makeyourshoppinglist/greet</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>com_wouterpot_makeyourshoppinglist.html</welcome-file>
	</welcome-file-list>
</web-app>
